<UserControl x:Class="YOS.ViewPortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YOS" 
             xmlns:ViewModels="clr-namespace:YOS.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModels:ViewPortControlViewModel/>
    </UserControl.DataContext>
    <Grid>
        <hx:Viewport3DX 
                        Camera="{Binding Camera}">
            <hx:Viewport3DX.EffectsManager>
                <hx:DefaultEffectsManager/>
            </hx:Viewport3DX.EffectsManager>
            <hx:Viewport3DX.InputBindings>
                <MouseBinding Command="hx:ViewportCommands.Rotate" Gesture="RightClick" />
                <MouseBinding Command="hx:ViewportCommands.Pan" Gesture="MiddleClick" />
            </hx:Viewport3DX.InputBindings>
            <hx:DirectionalLight3D Color="White" Direction="{Binding Camera.LookDirection}"/>
          
            <hx:MeshGeometryModel3D Geometry="{Binding Geometry}">
                
            </hx:MeshGeometryModel3D>
        </hx:Viewport3DX>

    </Grid>
</UserControl>
